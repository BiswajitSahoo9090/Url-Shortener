<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>URL Shortener</title> 
    <% if (locals.id) { %>
        <p>URL Generated: http://localhost:8001/url/<%= id %></p>
    <% } %>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
        }
        h2 {
            color: #0ec8d2;
        }
        form {
            margin-top: 20px;
        }
        input {
            padding: 8px;
            margin-right: 10px;
            width: 300px;
        }
        button {
            padding: 8px 16px;
            background-color: #0ec8d2;
            border: none;
            color: white;
            cursor: pointer;
        }
        table {
            width: 100%;
            margin-top: 20px;
            border-collapse: collapse;
        }
        th, td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }
        th {
            background-color: #0ec8d2;
            color: white;
        }
    </style>
</head>
<body>
    <h2>URL Shortener</h2>
    <div>
        <form method="POST" action="/url">
            <label for="url">Enter Your Original URL:</label>
            <input type="text" id="url" name="url" placeholder="https://example.com" required />
            <button type="submit">Generate</button>
        </form>
    </div>
    <div>
        <% if (locals.urls) { %>
            <table>
                <thead>
                    <tr>
                        <th>S.No</th>
                        <th>ShortId</th>
                        <th>Redirect URL</th>
                        <th>Clicks</th>
                    </tr>
                </thead>
                <tbody>
                    <% urls.forEach((url, index) => { %>
                        <tr>
                            <td><%= index + 1 %></td>
                            <td><%= url.shortId %></td>
                            <td><%= url.redirectURL %></td>
                            <td><%= url.visitHistory.length %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } %>
    </div>
</body>
</html>
